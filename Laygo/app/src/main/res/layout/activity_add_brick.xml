<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_brick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.laygo.laygo.AddBrick">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/takePhoto"
            android:layout_width="78dp"
            android:layout_height="47dp"
            android:src="@mipmap/camera_icon"
            android:scaleType="centerInside"
            android:layout_row="3"
            android:layout_column="0" />

        <ImageView
            android:id="@+id/setLocation"
            android:layout_width="73dp"
            android:layout_height="64dp"
            android:src="@mipmap/location_icon"
            android:scaleType="centerInside"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageView
            android:id="@+id/locationAvailable"
            android:layout_width="95dp"
            android:layout_height="86dp"
            android:src="@mipmap/location_set_icon"
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:layout_row="4"
            android:layout_column="1" />

        <ImageView android:id="@+id/showPhoto"
            android:layout_height="77dp"
            android:src="@mipmap/noimage"
            android:layout_width="76dp"
            android:layout_weight="0.16"
            android:layout_row="0"
            android:layout_column="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Word"
            android:ems="10"
            android:id="@+id/editText" />
    </GridLayout>

</RelativeLayout>
